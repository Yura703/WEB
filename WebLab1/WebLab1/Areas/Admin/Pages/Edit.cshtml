@page "{id:int}"
@model WebLab.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

@section Scripts{
    <script src="~/js/bs-custom-file-input.js"></script>
    <script>
         bsCustomFileInput.init();
    </script>
}

<h1>Edit</h1>

<h4>Plane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Plane.PlaneId" />
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Plane.Image))
                {
                    <img src=~/Images/@Model.Plane.Image alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input" asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>




                <div class="form-group">
                    <label asp-for="Plane.PlaneName" class="control-label"></label>
                    <input asp-for="Plane.PlaneName" class="form-control" />
                    <span asp-validation-for="Plane.PlaneName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plane.Description" class="control-label"></label>
                    <input asp-for="Plane.Description" class="form-control" />
                    <span asp-validation-for="Plane.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plane.Speed" class="control-label"></label>
                    <input asp-for="Plane.Speed" class="form-control" />
                    <span asp-validation-for="Plane.Speed" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="Plane.Image" class="control-label"></label>
                    <input asp-for="Plane.Image" class="form-control" />
                    <span asp-validation-for="Plane.Image" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Plane.PlaneGroupId" class="control-label"></label>
                    <select asp-for="Plane.PlaneGroupId" class="form-control" asp-items="ViewBag.PlaneGroupId"></select>
                    <span asp-validation-for="Plane.PlaneGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

